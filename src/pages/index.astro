<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Contrata Ahora',
        href: 'https://wa.me/593961886637?text=Me%20interesa%20el%20servicio%20de%20internet',
        target: '_blank',
        icon: 'mdi:contract-sign',
